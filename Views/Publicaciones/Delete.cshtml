@model ITLABlogger.Models.Publicaciones

@{
    ViewData["Title"] = "Eliminación Publicación";
}

<h1>Eliminación Publicación</h1>
<h3>¿Está seguro que quiere eliminar?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título Publicación:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TituloPublicacion)
        </dd>

        <dt class="col-sm-2">Contenido:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContPublicacion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TituloPublicacion" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a Listado</a>
    </form>
</div>